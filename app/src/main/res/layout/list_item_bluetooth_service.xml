<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_view_service_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="qwerty"
        android:textSize="20sp"
        android:layout_marginStart="@dimen/text_view_default_margin"
        android:textColor="@color/color_text_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ListView
        android:id="@+id/list_view_characteristics"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/text_view_service_name" />

</androidx.constraintlayout.widget.ConstraintLayout>