<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_view_dashboard_device_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="name"
        android:textSize="@dimen/text_size_common"
        android:textColor="@color/color_text_text_view"
        android:layout_marginStart="@dimen/text_view_default_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/text_view_dashboard_device_mac"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="mac"
        android:textSize="@dimen/text_size_common"
        android:textColor="@color/color_text_text_view"
        android:layout_marginStart="@dimen/text_view_default_margin"/>

    <TextView
        android:id="@+id/text_view_dashboard_device_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="type"
        android:textSize="@dimen/text_size_common"
        android:textColor="@color/color_text_text_view"
        android:layout_marginStart="@dimen/text_view_default_margin"/>

    <TextView
        android:id="@+id/text_view_dashboard_device_class"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="class"
        android:textSize="@dimen/text_size_common"
        android:textColor="@color/color_text_text_view"
        android:layout_marginStart="@dimen/text_view_default_margin"/>

    <TextView
        android:id="@+id/text_view_dashboard_device_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="state"
        android:textSize="@dimen/text_size_common"
        android:textColor="@color/color_text_text_view"
        android:layout_marginStart="@dimen/text_view_default_margin"/>

    <ExpandableListView
        android:id="@+id/expandable_list_services"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:divider="@color/color_expandable_list_view_divider"
        android:layout_marginTop="10sp"
        android:dividerHeight="2dp" />

</LinearLayout>