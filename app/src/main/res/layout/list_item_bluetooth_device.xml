<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_view_device_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/color_text_text_view"
        android:layout_marginStart="@dimen/text_view_default_margin" />

    <TextView
        android:id="@+id/text_view_device_mac"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="mac"
        android:textColor="@color/color_text_text_view"
        android:layout_marginStart="@dimen/text_view_default_margin"
        app:layout_constraintTop_toBottomOf="@+id/text_view_device_name"/>

    <TextView
        android:id="@+id/text_view_device_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="type"
        android:textColor="@color/color_text_text_view"
        android:layout_marginStart="@dimen/text_view_default_margin"
        app:layout_constraintTop_toBottomOf="@+id/text_view_device_mac"/>

</androidx.constraintlayout.widget.ConstraintLayout>