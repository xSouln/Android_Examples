<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/color_expandable_list_view_content">

    <TextView
        android:id="@+id/text_view_child_characteristic_uuid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="uuid"
        android:textStyle="italic"
        android:textSize="@dimen/text_size_expandable_list_view_content"
        android:layout_marginStart="@dimen/margin_expandable_list_view_content"/>

    <TextView
        android:id="@+id/text_view_child_characteristic_write_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="write type"
        android:textStyle="italic"
        android:layout_marginStart="@dimen/margin_expandable_list_view_content"
        android:textSize="@dimen/text_size_expandable_list_view_content"/>

    <TextView
        android:id="@+id/text_view_child_descriptors_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="descriptors count"
        android:textStyle="italic"
        android:layout_marginStart="@dimen/margin_expandable_list_view_content"
        android:textSize="@dimen/text_size_expandable_list_view_content"/>

    <TextView
        android:id="@+id/text_view_child_characteristic_properties"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="properties"
        android:textStyle="italic"
        android:layout_marginStart="@dimen/margin_expandable_list_view_content"
        android:textSize="@dimen/text_size_expandable_list_view_content"/>

    <TextView
        android:id="@+id/text_view_child_characteristic_permissions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="permissions"
        android:textStyle="italic"
        android:layout_marginStart="@dimen/margin_expandable_list_view_content"
        android:textSize="@dimen/text_size_expandable_list_view_content"/>

    <TextView
        android:id="@+id/text_view_child_characteristic_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="value"
        android:textStyle="italic"
        android:layout_marginStart="@dimen/margin_expandable_list_view_content"
        android:textSize="@dimen/text_size_expandable_list_view_content"/>

</LinearLayout>